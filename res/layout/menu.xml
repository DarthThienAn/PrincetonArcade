<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.99"
        android:orientation="vertical" >

        <Button
            android:id="@+id/start_snake"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:text="Snake"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/start_squirrel"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:text="Squirrel Hunt"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/start_princetontd"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:text="Tower Defense"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/start_tabletop"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:text="TableTop"
            android:textColor="#ffffff" />
        
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/view_highscores"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:text="View High Scores"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/returntolobby"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_background"
            android:text="Back to Lobby"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>