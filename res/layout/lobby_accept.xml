<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/challenge"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/accept_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Challenged!"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/lobby_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accept_status"
        android:text="Accept!" />

    <Button
        android:id="@+id/lobby_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lobby_accept"
        android:layout_below="@+id/accept_status"
        android:text="Decline" />

</RelativeLayout>